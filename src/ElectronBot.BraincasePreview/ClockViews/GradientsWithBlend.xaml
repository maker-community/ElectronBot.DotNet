<UserControl
    x:Class="ClockViews.GradientsWithBlend"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ClockViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToObjectConverter
            x:Key="BoolToVerticalAlignmentConverter"
            FalseValue="Bottom"
            TrueValue="Top" />
        <converters:BoolToObjectConverter
            x:Key="BoolToVerticalHorizontalAlignment"
            FalseValue="Right"
            TrueValue="Left" />
        <Style TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiLight" />
        </Style>
    </UserControl.Resources>
    <Grid x:Name="ContentArea">
        <Rectangle x:Name="Gradient" />
        <Grid Width="200" Height="200">
            <Grid
                x:Name="CompactView"
                IsHitTestVisible="True"
                Opacity="1">
                <Viewbox>
                    <Grid
                        Width="200"
                        Height="200"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                        <Grid Margin="4,-7,4,0">
                            <StackPanel x:Name="FocusTextCompact">
                                <animations:Implicit.HideAnimations>
                                    <animations:TranslationAnimation
                                        DelayBehavior="SetInitialValueBeforeDelay"
                                        From="0,0,0"
                                        To="0,-20,0"
                                        Duration="0:0:0.6" />
                                    <animations:OpacityAnimation
                                        DelayBehavior="SetInitialValueBeforeDelay"
                                        From="1"
                                        To="0"
                                        Duration="0:0:0.6" />
                                </animations:Implicit.HideAnimations>
                                <animations:Implicit.ShowAnimations>
                                    <animations:TranslationAnimation
                                        DelayBehavior="SetInitialValueBeforeDelay"
                                        From="0,-20,0"
                                        To="0,0,0"
                                        Duration="0:0:0.6" />
                                    <animations:OpacityAnimation
                                        DelayBehavior="SetInitialValueBeforeDelay"
                                        From="0"
                                        To="1"
                                        Duration="0:0:0.6" />
                                </animations:Implicit.ShowAnimations>
                                <controls:DropShadowPanel
                                    Margin="0,32,0,0"
                                    HorizontalAlignment="Center"
                                    BlurRadius="8"
                                    OffsetY="2"
                                    ShadowOpacity="0.3">
                                    <TextBlock
                                        FontFamily="/Assets/Font/SmileySans-Oblique.ttf#得意黑"
                                        FontSize="{x:Bind ViewModel.ClockTitleConfig.CustomClockTitleFontsize, Mode=OneWay}"
                                        Foreground="White"
                                        Text="{x:Bind ViewModel.ClockTitleConfig.CustomClockTitle, Mode=OneWay}" />
                                </controls:DropShadowPanel>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Grid VerticalAlignment="Center">

                                        <controls:RadialGauge
                                            x:Name="RadialGaugeCPU"
                                            x:Uid="RadialGaugeCPU"
                                            Width="72"
                                            Height="72"
                                            Margin="8"
                                            IsInteractive="False"
                                            MaxAngle="360"
                                            Maximum="100"
                                            MinAngle="0"
                                            Minimum="0"
                                            NeedleBrush="Red"
                                            NeedleLength="100"
                                            NeedleWidth="5"
                                            ScalePadding="0"
                                            ScaleTickBrush="AliceBlue"
                                            ScaleTickWidth="2"
                                            ScaleWidth="20"
                                            StepSize="2"
                                            TickLength="2"
                                            TickSpacing="10"
                                            TickWidth="2"
                                            TrailBrush="Pink"
                                            ValueStringFormat="N2"
                                            Value="{x:Bind ViewModel.ClockDiagnosticInfo.CpuUsage, Mode=OneWay}" />
                                        <TextBlock
                                            x:Name="CpuTtile"
                                            x:Uid="CpuTitle"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="/Assets/Font/SmileySans-Oblique.ttf#得意黑"
                                            FontSize="14"
                                            Foreground="White" />
                                    </Grid>
                                    <Grid VerticalAlignment="Center">

                                        <controls:RadialGauge
                                            x:Name="RadialGaugeROM"
                                            x:Uid="RadialGaugeROM"
                                            Width="60"
                                            Height="60"
                                            Margin="8"
                                            IsInteractive="False"
                                            MaxAngle="360"
                                            Maximum="100"
                                            MinAngle="0"
                                            Minimum="0"
                                            NeedleBrush="Red"
                                            NeedleLength="100"
                                            NeedleWidth="5"
                                            ScalePadding="0"
                                            ScaleTickBrush="AliceBlue"
                                            ScaleTickWidth="2"
                                            ScaleWidth="23"
                                            StepSize="2"
                                            TickLength="0"
                                            TickSpacing="10"
                                            TickWidth="0"
                                            TrailBrush="Pink"
                                            ValueStringFormat="N2"
                                            Value="{x:Bind ViewModel.ClockDiagnosticInfo.MemoryUsage, Mode=OneWay}" />
                                        <TextBlock
                                            x:Name="RomTtile"
                                            x:Uid="RomTitle"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="/Assets/Font/SmileySans-Oblique.ttf#得意黑"
                                            FontSize="14"
                                            Foreground="White" />
                                    </Grid>


                                </StackPanel>
                                <controls:DropShadowPanel
                                    Margin="0,0,0,4"
                                    HorizontalAlignment="Center"
                                    BlurRadius="8"
                                    OffsetY="2"
                                    ShadowOpacity="0.3">
                                    <TextBlock
                                        FontFamily="/Assets/Font/SmileySans-Oblique.ttf#得意黑"
                                        FontSize="14"
                                        Foreground="White"
                                        Text="{x:Bind ViewModel.ClockDiagnosticInfo.MemoryUsageText, Mode=OneWay}"
                                        TextWrapping="WrapWholeWords" />
                                </controls:DropShadowPanel>
                                <controls:DropShadowPanel
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Center"
                                    BlurRadius="8"
                                    OffsetY="2"
                                    ShadowOpacity="0.3">
                                    <TextBlock
                                        FontFamily="/Assets/Font/SmileySans-Oblique.ttf#得意黑"
                                        FontSize="14"
                                        Foreground="White"
                                        Text="{x:Bind ViewModel.ClockDiagnosticInfo.Temperature, Mode=OneWay}" />
                                </controls:DropShadowPanel>
                            </StackPanel>
                        </Grid>
                        <Grid
                            Margin="3,9"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom">
                            <animations:Implicit.ShowAnimations>
                                <animations:TranslationAnimation
                                    DelayBehavior="SetInitialValueBeforeDelay"
                                    From="0,-20,0"
                                    To="0,0,0"
                                    Duration="0:0:0.6" />
                                <animations:OpacityAnimation
                                    DelayBehavior="SetInitialValueBeforeDelay"
                                    From="0"
                                    To="1"
                                    Duration="0:0:0.6" />
                            </animations:Implicit.ShowAnimations>
                        </Grid>
                    </Grid>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
